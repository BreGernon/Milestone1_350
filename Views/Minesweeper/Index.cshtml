@model IEnumerable<Milestone1_350.Models.ButtonModel>

<style>

    .button {
        width: 75px;
    }

    .button-image {
        width: 70px;
        position: center;
    }

    .button-container {
        display: flex;
        flex-wrap: wrap;
    }

    .line-break {
        flex-basis: 100%;
        height: 0;
    }
</style>

<p>Current Time: @DateTime.Now</p>

<form>
    <div class="button-container">
        @for (int i = 0; i < Model.Count(); i++)
        {
            if (i % Math.Sqrt(Model.Count()) == 0)
            {
                <div class="line-break"></div>
            }

            <div class="button" id="button-@i">
                @Html.Partial("ShowOneButton", Model.ElementAt(i))
            </div>
        }
    </div>

    <h4>Instructions</h4>
    <p>Click once on the square to set a flag. Click a second time to reveal the square</p>
</form>

@section Scripts {
    <script scr="~/js/site.js"></script>
}